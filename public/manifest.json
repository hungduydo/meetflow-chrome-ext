{
  "manifest_version": 3,
  "name": "MeetFlow AI",
  "version": "1.0.0",
  "description": "Real-time AI co-pilot for Google Meet â€” transcription, smart replies, and meeting insights.",
  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "tabCapture",
    "storage",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "https://meet.google.com/*"
  ],

  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["src/content.ts"],
      "css": ["src/content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16":  "icons/icon16.png",
      "48":  "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "assets/*"],
      "matches":   ["https://meet.google.com/*"]
    }
  ]
}
